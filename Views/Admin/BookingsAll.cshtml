@using Labb2RestaurantMVC.Models.Booking
@model List<BookingNew>


<div class="container">
    <h2 class="display-3 text-center mb-4">Bookings</h2>

    <div class="d-flex justify-content-center mb-3">
        <a asp-action="BookingAdd" asp-controller="Admin" class="btn btn-outline-primary">Add Booking</a>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger text-center" style="max-width: 600px; margin: 0 auto;">
            @ViewBag.ErrorMessage
        </div>
    }

    <div class="row">
        @foreach (var book in Model)
        {
            <div class="col-12 mb-4">
                <div class="card border-secondary shadow-sm h-100">
                    <div class="card-body d-flex flex-column">
                        <div class="d-flex flex-row flex-wrap mb-3">

                            <div class="me-3" style="min-width: 200px;">
                                <h5 class="card-title">@book.CustomerFullName</h5>
                            </div>
                            <div class="me-3" style="min-width: 150px;">
                                <p class="card-text">Customer ID: @book.CustomerId</p>
                            </div>
                            <div class="me-3" style="min-width: 150px;">
                                <p class="card-text">Table Number: @book.TableNumber</p>
                            </div>
                            <div class="me-3" style="min-width: 150px;">
                                <p class="card-text">Table ID: @book.TableId</p>
                            </div>
                            <div class="me-3" style="min-width: 150px;">
                                <p class="card-text">Date: @book.BookingDate.ToString("yyyy-MM-dd")</p>
                            </div>
                            <div class="me-3" style="min-width: 150px;">
                                <p class="card-text">Start Time: @book.BookingStart</p>
                            </div>
                            <div class="me-3 flex-grow-1" style="min-width: 150px;">
                                <p class="card-text">End Time: @book.BookingEnd</p>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between mt-auto">
                            <div class="d-flex">
                                <a asp-controller="Admin" asp-action="BookingUpdate" asp-route-id="@book.Id" class="btn btn-warning btn-sm me-2">Update</a>
                                <form method="post" asp-controller="Admin" asp-action="BookingDelete" style="display:inline;">
                                    <input type="hidden" name="id" value="@book.Id" />
                                    <button type="submit" class="btn btn-danger btn-sm">Remove</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
